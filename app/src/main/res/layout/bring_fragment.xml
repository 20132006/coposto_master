<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_bring"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:id="@+id/tobBar"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.38">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:id="@+id/textFiedlHolder">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/going_from"
                android:hint="Откуда" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:ems="10"
                android:id="@+id/going_to"
                android:hint="Куда"
                android:textIsSelectable="false"
                android:inputType="textPersonName" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:ems="10"
                android:id="@+id/data_of_flight"
                android:textIsSelectable="false"
                android:hint="Дата отбытия"
                android:inputType="textPersonName" />

        </LinearLayout>

        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:id="@+id/find_button"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dostavit"
            android:layout_weight="0.03" />

    </LinearLayout>

</RelativeLayout>