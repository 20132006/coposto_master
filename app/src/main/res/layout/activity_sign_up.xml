<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.coposto.RegistrationProcess.SignUpActivity"
    android:background="@drawable/bground_login_signup_1"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <include layout="@layout/content_sign_up" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/tobBar"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.36">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="296dp"
            android:id="@+id/textFiedlHolder">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etFirstName"
                android:hint="Имя" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:ems="10"
                android:id="@+id/etLastName"
                android:hint="Фамилия"
                android:textIsSelectable="false"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:ems="10"
                android:id="@+id/etEmail"
                android:hint="Эл. адрес"
                android:inputType="textEmailAddress" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/etPassword"
                android:hint="Пароль"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/etPhoto"
                android:hint="Фото"
                android:inputType="none" />
        </LinearLayout>

        <ImageButton
            android:layout_width="194dp"
            android:layout_height="60dp"
            android:id="@+id/signup_ImageButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/zaregis"
            android:onClick="userReg"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
