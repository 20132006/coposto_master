<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_send"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:id="@+id/tobBar"
            android:layout_gravity="center_vertical">

        </LinearLayout>

        <TableLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="356dp"
            android:id="@+id/textFiedlHolder">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <AutoCompleteTextView
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/destination_from"
                    android:hint="Откуда" />

                <AutoCompleteTextView
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/destination_to"
                    android:hint="Куда" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:inputType="phone|none"
                    android:ems="10"
                    android:id="@+id/period_from"
                    android:hint="С какого числа"
                    android:textIsSelectable="false" />

                <EditText
                    android:layout_width="170dp"
                    android:layout_height="55dp"
                    android:inputType="phone|none"
                    android:ems="10"
                    android:id="@+id/period_to"
                    android:hint="До какого числа"
                    android:textIsSelectable="false" />
            </TableRow>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/parcel_name"
                android:hint="Наименование посылки" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/parcel_weight"
                android:hint="Вес посылки" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/parcel_price"
                android:hint="Цена посылки" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/parcel_image"
                android:hint="Загрузить рисунок посылки"
                android:inputType="none" />
        </TableLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="43dp"
            android:id="@+id/submit_button"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/otpravit"
            android:layout_weight="0.11" />

    </LinearLayout>

    <TextView android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        />

</RelativeLayout>